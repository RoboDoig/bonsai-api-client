<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:bonsai_api_client.Views"
             x:Name="this"
             x:Class="bonsai_api_client.Views.GraphViewControl">

    <VerticalStackLayout>
        <GraphicsView x:Name="graphViewControl" 
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand" 
                      HeightRequest="500" 
                      Drawable="{x:Reference this}"
                      StartInteraction="graphViewControl_StartInteraction">
            
        </GraphicsView>
    </VerticalStackLayout>
</ContentView>
